---
import { Icon } from 'astro-icon/components'

interface Props {
  iconName: string;
  iconSize?: number;
}

const { iconName, iconSize = 24 } = Astro.props;
---

<div class="grid grid-cols-[50px_1fr] lg:grid-cols-[100px_1fr]">
  <div class="flex justify-center border-r p-4 lg:p-10">
    <Icon name={iconName} size={iconSize} />
  </div>
  <p class="p-6 lg:p-10">
    <slot />
  </p>
</div>
