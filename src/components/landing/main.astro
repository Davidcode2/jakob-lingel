---
import { Icon } from "astro-icon/components";
import ProjectDescriptions from "./projectDescriptions.astro";
import Projects from "./projects.astro";
---

<div class="">
  <div class="flex p-6 border-b">
    <ul class="ml-auto flex gap-x-6">
      <li>About</li>
      <li>Projects</li>
      <li>Contact</li>
    </ul>
  </div>
  <div class="grid grid-cols-[1fr_2fr] divide-x border-b">
    <h1
      class="font-michroma italic text-3xl px-5 lg:text-9xl uppercase pt-10 pb-12 lg:px-14"
    >
      Jakob Lingel
    </h1>
    <div
      class="flex flex-col pt-10 lg:pt-14 max-sm:text-sm px-2 md:px-10 lg:px-14 lg:gap-y-10 lg:justify-between lg:pb-12"
    >
      <div>Fullstack Developer</div>
      <div>Design enthusiast</div>
      <div>Learner</div>
    </div>
  </div>
  <ProjectDescriptions />
  <Projects />
  <div>
    <div
      class="grid grid-cols-[50px_1fr] sm:grid-cols-[50px_1fr_50px] lg:grid-cols-[100px_1fr_100px]"
    >
      <div class="border-r"></div>
      <div class="p-10 grid gap-y-6">
        <a href="https://github.com/davidcode2" target="_blank" class="text-(--foreground) flex gap-x-4">
          <Icon name="simple-icons:github" size={24} />
          GitHub
        </a>
        <a href="https://www.linkedin.com/in/jakob-lingel-613976253/" target="_blank" class="text-(--foreground) flex gap-x-4">
          <Icon name="simple-icons:linkedin" size={24} />
          LinkedIn
        </a>
      </div>
      <div class="max-sm:hidden border-l"></div>
    </div>
  </div>
</div>
