---
import ProjectDescriptions from "./projectDescriptions.astro";
import Projects from "./projects.astro";
import Footer from "../footer.astro";
---

<div class="">
  <div class="flex p-2 lg:p-6 border-b">
    <ul class="ml-auto flex gap-x-6">
      <li><a href="#about" class="hover:underline cursor-pointer">About</a></li>
      <li><a href="#projects" class="hover:underline cursor-pointer">Projects</a></li>
      <li><a href="#contact" class="hover:underline cursor-pointer">Contact</a></li>
    </ul>
  </div>
  <div class="grid md:grid-cols-[auto_2fr] divide-x border-b">
    <h1
      class="font-michroma italic max-sm:text-5xl text-5xl lg:text-9xl uppercase pr-3"
    >
    Jakob<br/>Lingel
    </h1>
    <div
      class="flex flex-col lg:pt-14 max-sm:text-sm md:px-2 p-1 lg:px-14 lg:gap-y-10 lg:justify-between lg:pb-12"
    >
      <div>Fullstack Developer</div>
      <div>Design enthusiast</div>
      <div>Learner</div>
    </div>
  </div>
      <div class="border-b w-full h-4 lg:h-10"></div>
    <div id="about"></div>
    <ProjectDescriptions />
    <div id="projects"></div>
    <Projects />
    <div id="contact"></div>
    <Footer/>
</div>
